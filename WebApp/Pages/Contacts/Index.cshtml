@page
@model WebApp.Pages.Contacts.IndexModel
@{
}

<h2>Contacts List</h2>

<a asp-page="./Edit" asp-route-id="">Add New</a>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Contacts)
        {
            <tr class="clickable-row" data-href='@Url.Page("./Edit", new { id = item.Id })'>
                <td>@item.Name</td>
                <td>@item.Contact</td>
                <td>@item.Email</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-page="./Edit" asp-route-id="@item.Id" asp-route-edit="true">Edit</a> |
                    <a class="btn btn-sm" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <a href="#">&laquo;</a>
    <a href="#">1</a>
    <a href="#" class="active">2</a>
    <a href="#">3</a>
    <a href="#">4</a>
    <a href="#">5</a>
    <a href="#">6</a>
    <a href="#">&raquo;</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".clickable-row").click(function () {
                window.location = $(this).data("href");
            });
        });
    </script>
}