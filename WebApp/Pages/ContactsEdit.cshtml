@page
@model WebApp.Pages.ContactsEditModel
@{
}

<h2>Create New Contact</h2>

<form method="post">
    <div>
        <label for="Name">Name:</label>
        <input asp-for="Contact.Name" id="Name" type="text" />
        <span asp-validation-for="Contact.Name" class="text-danger"></span>
    </div>
    <div>
        <label for="Contact">Contact:</label>
        <input asp-for="Contact.Contact" id="Contact" type="text" />
        <span asp-validation-for="Contact.Contact" class="text-danger"></span>
    </div>
    <div>
        <label for="Email">Email:</label>
        <input asp-for="Contact.Email" id="Email" type="text" />
        <span asp-validation-for="Contact.Email" class="text-danger"></span>
    </div>
    <button type="submit">Create</button>
</form>